<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTxt_regPassword"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTxt_regEmail"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editTxt_confirmPass"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTxt_regPassword"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editTxt_regEmail"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="119dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/btn_signUp"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTxt_confirmPass"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:background="#1abc9c"
        android:text="SignUp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:text="SignUp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btn_signUp"
        android:layout_marginEnd="145dp"
        android:text="Already a user?" />

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_marginStart="-145dp"
        android:layout_toEndOf="@+id/textView4"
        android:text=" LogIn"
        android:textColor="#1abc9c"
        android:textStyle="bold|italic" />
</RelativeLayout>